<div class="container">
		<% if session[:username].nil? %>
		<br><a href="/login"><input class="login-btn" type="submit" value="Signup/Login"></a>
		<% else %>
		<br><br><a href="/logout"><input class="logout-btn" type="submit" value="Logout"></a></a>
		<% end %>



<% if session[:username].nil? %>
<h3>Please Log In first!</h3>
<% else %>
<div>
	<h1>Hello <%= @user.username %></h1>
		<form action="/" method="post" id="submit_tweet">
	  <input type="text" name="tweet" placeholder="Tweet something :D">
	  <input id="submitbutton" type="submit" value="Submit">
	</form>
	<br><br>
	<div id="tweets">

	</div>
	<div id="loader" style="display:none;">
		<img src="/loader/ajax-loader.gif"><br><br>
		Posting Tweet! Tweet tweet!
	</div>
</div>
<% end %>
</div>